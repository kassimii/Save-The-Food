<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonationsReceivedFragment">

    <include
        android:id="@+id/donations_received_action_bar"
        layout="@layout/donations_received_action_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@id/donations_received_action_bar"
        android:orientation="horizontal">

        <Button
            android:id="@+id/searchOnMap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_color_light_purple"
            android:text="SEARCH ORGANISATION"
            android:textColor="@color/Light"
            />
    </LinearLayout>

    <ListView
        android:id="@+id/LVDonations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_below="@id/linearLayout"></ListView>

</RelativeLayout>