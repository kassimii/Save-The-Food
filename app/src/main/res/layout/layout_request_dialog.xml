<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anaheim"
            android:text="Add special request"
            android:textAlignment="center"
            android:textColor="@color/Dark"
            android:textSize="24dp"
            android:textStyle="bold" />
    </LinearLayout>


    <EditText
        android:id="@+id/ENumberOfPersons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/anaheim"
        android:hint="Number of persons"
        android:inputType="number"
        android:textColor="@color/DarkGreen" />

    <EditText
        android:id="@+id/ESpecialRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ENumberOfPersons"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/anaheim"
        android:hint="Special request for today"
        android:textColor="@color/DarkGreen" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:layout_below="@id/ESpecialRequest">

        <TextView
            android:id="@+id/TCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/anaheim"
            android:text="Cancel"
            android:textAlignment="center"
            android:textColor="@color/Dark"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/anaheim"
            android:text="Add"
            android:textAlignment="center"
            android:textColor="@color/Dark"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>



</RelativeLayout>